#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
int main()
{
    float a,b,c;
    char d;
    printf("Dois numeros reais:    ");
    scanf("%f %f", &a, &b);
    printf("Digite agora qual a operacao aritmetica, conforme tabela entregue:    ");
    scanf("%s", &d);
        switch (d){
        case '+':
        printf("%f + %f = %f", a,b, a+b);
        break;
            case '-':
            printf("%f - %f = %f", a,b, a-b);
            break;
                 case '*':
                printf("%f * %f = %f", a,b, a*b);
                break;
                    case '/':
                    printf("%f / %f = %f", a,b, a/b);
                    break;
                        default:
                        printf("Operacao invalida");
        }

}
